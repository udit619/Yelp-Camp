<% include ../partials/header %>

<h1 style="text-align: center">Edit <%= campground.name %></h1>
<div class="container">
    <div class="row">
        <div style="width: 30%;margin: 0px auto;padding: 10px">
            <form action="/campground//<%= campground._id%>/?_method=PUT" method="post" class="form-group">
                <input type="text" name="edit[name]" value="<%= campground.name%>"  class="form-control col-lg-6" style="margin-bottom:5px ">
                <input type="text" name="edit[image]" value="<%= campground.image%>"  class="form-control col-lg-6" style="margin-bottom:5px ">
                <input type="text" name="edit[description]" value="<%= campground.description%>"  class="form-control col-lg-6" style="margin-bottom:5px ">
                <input type="submit" class="btn btn-lg btn-primary btn-block">
            </form>
            <a href="/campground">Show All</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>