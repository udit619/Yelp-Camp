<% include ../partials/header %>

<h1 style="text-align: center">Create a new CampGround</h1>
<div class="container">
    <div class="row">
        <div style="width: 30%;margin: 0px auto;padding: 10px">
            <form action="/campground/<%= campground._id %>/comments" method="post" class="form-group">
                <input type="text" placeholder="Comment" name="comment[text]" class="form-control col-lg-6" style="margin-bottom:5px ">
                <input type="submit" class="btn btn-lg btn-primary btn-block">
            </form>
            <a href="/campground">Show All</a>
        </div>
    </div>
</div>

